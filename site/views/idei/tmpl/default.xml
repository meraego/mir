<?xml version="1.0" encoding="utf-8"?>
<metadata>

    <layout title="List of Idei">
        <message>
            <![CDATA[This layout will display a list of active idei.]]>
        </message>
    </layout>

    <fields name="params">
        <fieldset name="component" label="Component">

            <field
                    name="show_filter_box"
                    type="radio"
                    class="btn-group"
                    default="1"
                    label="COM_MIR_MENU_SHOW_FILTER"
                    description="COM_MIR_MENU_SHOW_FILTER_DESC"
            >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field
                    name="show_status"
                    type="radio"
                    class="btn-group"
                    default="1"
                    label="COM_MIR_MENU_SHOW_STATUS"
                    description="COM_MIR_MENU_SHOW_STATUS_DESC"
            >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field
                    name="show_status_as"
                    type="list"
                    default="1"
                    label="COM_MIR_MENU_SHOW_STATUS_AS"
                    description="COM_MIR_MENU_SHOW_STATUS_AS_DESC"
            >
                <option value="1">Image</option>
                <option value="0">Text</option>
            </field>

            <field
                    name="show_start_date"
                    type="radio"
                    class="btn-group"
                    default="1"
                    label="COM_MIR_MENU_SHOW_START_DATE"
                    description="COM_MIR_MENU_SHOW_START_DATE_DESC"
            >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field name="show_end_date"
                   type="radio"
                   class="btn-group"
                   default="1"
                   label="COM_MIR_MENU_SHOW_END_DATE" description="COM_MIR_MENU_SHOW_END_DATE_DESC"
            >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field
                    name="date_format"
                    type="text"
                    default="F j, Y"
                    label="COM_MIR_MENU_DATE_FORMAT"
                    description="COM_MIR_MENU_DATE_FORMAT_DESC"
                    size="25"
            />

            <field
                    name="show_num_voters"
                    type="radio"
                    class="btn-group"
                    default="1"
                    label="COM_MIR_MENU_SHOW_NUM_VOTERS"
                    description="COM_MIR_MENU_SHOW_NUM_VOTERS_DESC"
            >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field
                    name="show_num_options"
                    type="radio"
                    class="btn-group"
                    default="1"
                    label="COM_MIR_MENU_SHOW_NUM_OPTIONS"
                    description="COM_MIR_MENU_SHOW_NUM_OPTIONS_DESC"
            >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

        </fieldset>
    </fields>
</metadata>